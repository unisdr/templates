<body>
  <div class="dts-page-container">

    //
      include includes/_header.html

    <main class="dts-main-container">

      <section>
        <div class="mg-container">
          <br>
          <hr>
          <h3>2 columns form on 768px up, 1 column form on 767px down</h3>
          <form class="dts-form">
            //
              Form fields line - 2 columns
            <div class="mg-grid mg-grid__col-2">
              <div class="dts-form-component">
                <label>
                  <span>Date picker field</span>
                  <input type="date">
                </label>
              </div>
              <div class="dts-form-component">
                <label>
                  <span>Time picker field</span>
                  <input type="time">
                </label>
              </div>
            </div>
            //
              Form fields line - 2 columns
            <div class="mg-grid mg-grid__col-2">
              <div class="dts-form-component">
                <label>
                  <span>File upload field</span>
                  <input type="file">
                </label>
              </div>
              <div class="dts-form-component">
                //
                  Add aria-invalid="true" attribute to label tag when the field has ERRORS
                <label aria-invalid="true">
                  //
                    In checkboxes this span tag is empty, but it must exist in order to keep the right alignment with other fields
                  <span></span>
                  <div class="dts-form-component__field--horizontal">
                    //
                      Add aria-describedBy="inputErrorId" attribute to the input tag when the field has ERRORS
                    <input type="checkbox" name="" aria-describedBy="validationMsgId" />
                    <span>Checkbox field  (single) - Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</span>
                  </div>
                </label>
                <div class="dts-form-component__hint">
                  <span class="dts-form-component__hint--error" id="validationMsgId" aria-live="assertive">Error message goes hereError message goes hereError message goes hereError message goes hereError message goes here</span>
                </div>
              </div>
            </div>
          </form>
        </div>
      </section>

      <section>
        <div class="mg-container">
          <br>
          <hr>
          <h3>3 columns form on 768px up, 1 column form on 767px down</h3>
          <form class="dts-form">
            //
              Form fields line - 3 columns
            <div class="mg-grid mg-grid__col-3">
              //
                Form field
              <div class="dts-form-component">
                //
                  Add aria-invalid="true" attribute to label tag when the field has ERRORS
                <label aria-invalid="true">
                  <span><abbr title="mandatory">*</abbr>Text field (single line)</span>
                  //
                    Add required attribute to the input tag when the field is MANDATORY
                    Add aria-describedBy="inputErrorId" attribute to the input tag when the field has ERRORS
                    Add aria-describedBy="inputErrorId descriptionTextId" attribute to the input tag when the field has ERRORS and DESCRIPTION
                  <input type="text" placeholder="enter text" aria-describedBy="validationMsgId descriptionTextId">
                </label>
                //
                  Add error message and/or description text, error message BEFORE description text
                <div class="dts-form-component__hint">
                  <span class="dts-form-component__hint--error" id="validationMsgId" aria-live="assertive">Error message goes hereError message goes hereError message goes hereError message goes hereError message goes here</span>
                  <span id="descriptionTextId">Description text goes here Description text goes here Description text goes here Description text goes here Description text goes here</span>
                </div>
              </div>
              <div class="dts-form-component">
                <label>
                  <span>Text field - email (disabled)</span>
                  //
                    Add disabled attribute to the input tag to make it DISABLED
                  <input type="email" placeholder="enter email" disabled>
                </label>
              </div>
              <div class="dts-form-component">
                <label>
                  <span>Text field - password (read-only)</span>
                  //
                    Add readonly attribute to the input tag to make it READ-ONLY
                    Add aria-describedBy="descriptionTextId" attribute to the input tag when the field has a DESCRIPTION
                  <input type="password" placeholder="enter password" value="ssgdfgsf" readonly aria-describedBy="descriptionTextId">
                </label>
                //
                  Add error message and/or description text
                <div class="dts-form-component__hint">
                  <span id="descriptionTextId">Description text goes here Description text goes here Description text goes here Description text goes here Description text goes here</span>
                </div>
              </div>
            </div>
            //
              Form fields line - 3 columns
            <div class="mg-grid mg-grid__col-3">
              <div class="dts-form-component">
                <label>
                  <span>Text field - search with autocomplete</span>
                  <input type="search" list="browsers" placeholder="search browser name">
                  <datalist id="browsers">
                    <option value="Internet Explorer">
                    <option value="Firefox">
                    <option value="Google Chrome">
                    <option value="Opera">
                    <option value="Safari">
                  </datalist>
                </label>
              </div>
              <div class="dts-form-component">
                <label>
                  <span>Number field (stepper)</span>
                  <input type="number" step="10" min="10" max="100" placeholder="enter number">
                </label>
              </div>
            </div>
            //
              Form fields line - 3 columns
            <div class="mg-grid mg-grid__col-3">
              //
                Form field - span 2 columns
              <div class="dts-form-component mg-grid__col--span-2">
                <label>
                  <span>Text area field (rows number, text maxlength)</span>
                  <textarea rows="5" maxlength="500" placeholder="enter text"></textarea>
                </label>
              </div>
            </div>
            //
              Form fields line - 2 columns
            <div class="mg-grid mg-grid__col-2">
              <div class="dts-form-component">
                //
                  Add aria-invalid="true" attribute to fieldset tag when the field has ERRORS
                <fieldset aria-invalid="true">
                  <legend><abbr title="mandatory">*</abbr>Checkbox fieldset</legend>
                  <div class="mg-grid mg-grid__col-2">
                    <div>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          //
                            Add aria-describedBy="inputErrorId" attribute to ALL input tags of the fieldset when the fieldset has ERRORS
                          <input type="checkbox" name="" aria-describedBy="inputErrorId descriptionTextId" />
                          <span>Checkbox field (single) - Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</span>
                        </div>
                      </label>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="checkbox" name="" aria-describedBy="inputErrorId descriptionTextId" disabled />
                          <span>Checkbox field (single)</span>
                        </div>
                      </label>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="checkbox" name="" aria-describedBy="inputErrorId descriptionTextId" />
                          <span>Checkbox field (single)</span>
                        </div>
                      </label>
                    </div>
                    <div>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="checkbox" name="" aria-describedBy="inputErrorId descriptionTextId" />
                          <span>Checkbox field (single)</span>
                        </div>
                      </label>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="checkbox" name="" aria-describedBy="inputErrorId descriptionTextId" />
                          <span>Checkbox field (single) - Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</span>
                        </div>
                      </label>
                    </div>
                  </div>
                  <div class="dts-form-component__hint">
                    <span class="dts-form-component__hint--error" id="validationMsgId" aria-live="assertive">Error message goes hereError message goes hereError message goes hereError message goes hereError message goes here</span>
                    <span id="descriptionTextId">Description text goes here Description text goes here Description text goes here Description text goes here Description text goes here</span>
                  </div>
                </fieldset>
              </div>
              <div class="dts-form-component">
                <fieldset>
                  <legend>Radiobutton fieldset</legend>
                  <div class="mg-grid mg-grid__col-2">
                    <div>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="radio" name="radiobuttonFieldsetName" disabled />
                          <span>Radiobutton label - Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</span>
                        </div>
                      </label>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="radio" name="radiobuttonFieldsetName" />
                          <span>Radiobutton label</span>
                        </div>
                      </label>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="radio" name="radiobuttonFieldsetName" />
                          <span>Radiobutton label</span>
                        </div>
                      </label>
                    </div>
                    <div>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="radio" name="radiobuttonFieldsetName" />
                          <span>Radiobutton label</span>
                        </div>
                      </label>
                      <label>
                        <span></span>
                        <div class="dts-form-component__field--horizontal">
                          <input type="radio" name="radiobuttonFieldsetName" />
                          <span>Radiobutton label - Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</span>
                        </div>
                      </label>
                    </div>
                  </div>
                </fieldset>
              </div>              
            </div>
          </form>
        </div>
      </section>

      <section>
        <div class="mg-container">
          <br>
          <hr>
          <h3>4 columns form on 1164px up, 2 columns form on 768px up, 1 column form on 767px down</h3>
          <form class="dts-form">
            //
              Form fields line - 4 columns
            <div class="mg-grid mg-grid__col-4">
