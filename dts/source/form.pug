              </div>
              <div class="dts-form-component">
                <label>
                  <span>Total cost</span>
                  <input type="text" placeholder="enter text">
                </label>
              </div>
            </div>
          </form>
        </div>
      </section>

    </main>

    include includes/_footer.html

  </div>
