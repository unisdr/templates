                <label>
                  <span>Select field (single selection)</span>
                  <select>
                    <option value="">Choose an option</option>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                    <option value="volkswagen">Volkswagen</option>
                  </select>
                </label>
              </div>
              <div class="dts-form-component">
                <label>
                  <span>Select field (single selection - with tooltip)</span>
                  <select>
                    <option value="">Choose an option</option>
                    <option value="volvo" title="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.">Volvo</option>
                    <option value="saab" title="tooltip two">Saab</option>
                    <option value="mercedes" title="tooltip three">Mercedes</option>
                    <option value="audi" title="tooltip four">Audi</option>
                    <option value="volkswagen"  title="tooltip five">Volkswagen</option>
                  </select>
                </label>
              </div>
              <div class="dts-form-component">
                <label>
                  <span>Select field (single selection - grouped options)</span>
                  <select>
                    <option value="">Choose an option</option>
                    <optgroup label="Swedish Cars">
                      <option value="volvo">Volvo</option>
                      <option value="saab">Saab</option>
